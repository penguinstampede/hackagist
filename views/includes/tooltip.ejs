<script id="tooltip-template" type="text/template">
  <div class="tooltip-wrap">
    <div class="row">
      <div class="avatar">
        <a href="&lt;%=url%&gt;"><img class="image" src="&lt;%=image_url%&gt;" alt="&lt;%=screen_name%&gt;"></a>
        <p class="location"><i class="fi-flag"></i> &lt;%=location%&gt;</p>
      </div>
      <div class="summary">
        <h1><a href="&lt;%=url%&gt;">&lt;%=screen_name%&gt;</a></h1>
        <small>(&lt;%=username%&gt;)</small>
        <p class="since"><span class="for-sr-only">Joined:</span><i class="fi-clock" title="Joined"></i> &lt;%= moment(created, 'X').fromNow() %&gt;</p>
        <p class="about">&lt;%=about_me%&gt;</p>
      </div>
    </div>
    <ul class="meta">
      <li><span class="for-sr-only">Followers:</span><i class="fi-torsos-all" title="Followers"></i> &lt;%= numeral(followers).format('0[.]0a') %&gt;</li>
      <li><span class="for-sr-only">Following:</span><i class="fi-heart" title="Following"></i> &lt;%= numeral(following).format('0[.]0a') %&gt;</li>
      <li><span class="for-sr-only">Projects:</span><i class="fi-wrench" title="Projects"></i> &lt;%= numeral(projects).format('0[.]0a') %&gt;</li>
      <li><span class="for-sr-only">Skulls:</span><i class="fi-skull" title="Skulls"></i> &lt;%= numeral(skulls).format('0[.]0a') %&gt;</li>
    </ul>
  </div>
</script>
