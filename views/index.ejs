<!doctype html>
<html class="no-js" lang="">
  <%- include('includes/head'); %>
  <body>
    <!--[if lt IE 8]>
      <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <section id="projects">
      <% the_projects.projects.forEach(function(project){ %>
        <% if (project.name) { %>
        <article class="project">
          <img class="image" src="<%= project.image_url %>">
          <hgroup>
            <h1 class="name"><%= project.name %></h1>
            <h2 class="owner" data-owner-id="<%= project.owner_id %>"><%= the_owners.find(function(owner) { return owner.id === project.owner_id; }).screen_name %></h2>
          </hgroup>
          <div class="summary">
            <p><%= project.summary %></p>
            <p><%= moment(project.created, 'X').fromNow() %></p>
            <ul class="meta">
              <li><span class="for-sr-only">Views:</span><i class="fi-eye" title="Views"></i> <%= numeral(project.views).format('0[.]0a') %></li>
              <li><span class="for-sr-only">Followers:</span><i class="fi-torsos-all" title="Followers"></i> <%= numeral(project.followers).format('0[.]0a') %></li>
              <li><span class="for-sr-only">Comments:</span><i class="fi-comment" title="Comments"></i> <%= numeral(project.comments).format('0[.]0a') %></li>
              <li><span class="for-sr-only">Skulls:</span><i class="fi-skull" title="Skulls"></i> <%= numeral(project.skulls).format('0[.]0a') %></li>
            </ul>
            <!---do we need to show more? -->
            <a class="more" href="#">View More</a>
          </div>
          <div class="info">
            <p class="description"><%= project.description %></p>
            <% if (project.tags) { %>
            <ul class="tags">
            <% project.tags.forEach(function(tag){ %>
              <li class="tag"><%= tag %></li>
            <% }); %>
            </ul>
            <% } %>
          </div>
        </article>
        <% } %>
      <% }); %>
    </section>
    <%- include('includes/footer'); %>
    <%- include('includes/tooltip'); %>
  </body>
</html>
