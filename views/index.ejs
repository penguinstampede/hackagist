<!doctype html>
<html class="no-js" lang="">
  <%- include('includes/head'); %>
  <body>
    <!--[if lt IE 8]>
      <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <section id="projects">
      <% the_projects.projects.forEach(function(project){ %>
        <% if (project.name) { %>
        <article class="project">
          <img class="image" src="<%= project.image_url %>">
          <hgroup>
            <h1 class="name"><%= project.name %></h1>
            <h2 class="owner" data-owner-id="<%= project.owner_id %>"><%= the_owners.find(function(owner) { return owner.id === project.owner_id; }).screen_name %></h2>
          </hgroup>
          <div class="summary">
            <p><%= project.summary %></p>
            <ul class="meta">
              <li>Views: <%= project.views %></li>
              <li>Comments: <%= project.comments %></li>
              <li>Skulls: <%= project.skulls %></li>
              <li>Followers: <%= project.followers %></li>
            </ul>
            <a class="more" href="#">View More</a>
          </div>
          <div class="info">
            <p class="description"><%= project.description %></p>
            <% if (project.tags) { %>
            <ul class="tags">
            <% project.tags.forEach(function(tag){ %>
              <li class="tag"><%= tag %></li>
            <% }); %>
            </ul>
            <% } %>
          </div>
        </article>
        <% } %>
      <% }); %>
    </section>
    <%- include('includes/footer'); %>
    <%- include('includes/tooltip'); %>
  </body>
</html>
